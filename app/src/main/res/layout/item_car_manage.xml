<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Изображение автомобиля -->
        <ImageView
            android:id="@+id/ivCarImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp" />

        <!-- Основная информация -->
        <TextView
            android:id="@+id/tvCarBrandModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Марка Модель"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Детали автомобиля -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvCarYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Год: 2023"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCarMileage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пробег: 0 км"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvCarColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Цвет: черный"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCarPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Цена: 0 ₽"
                android:textSize="14sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Статус -->
        <TextView
            android:id="@+id/tvCarStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус: В продаже"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="4dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnEditCar"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="4dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDeleteCar"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="4dp"
                android:text="Удалить"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>