<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Изображение автомобиля -->
        <ImageView
            android:id="@+id/ivCarImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp" />

        <!-- Основная информация -->
        <TextView
            android:id="@+id/tvCarBrandModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Марка Модель"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Детали -->
        <TextView
            android:id="@+id/tvCarYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Год: 2023"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCarMileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пробег: 0 км"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCarColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цвет: черный"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Цена -->
        <TextView
            android:id="@+id/tvCarPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена: 0 ₽"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>