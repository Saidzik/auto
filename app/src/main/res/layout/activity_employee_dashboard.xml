<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок с карточкой -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Панель менеджера"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Информация о сотруднике -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добро пожаловать, Менеджер!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEmployeeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Карточка статистики -->

        <!-- Навигационные кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCars"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Авто"
                android:textSize="13sp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnClients"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Клиенты"
                android:textSize="13sp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnDeals"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Сделки"
                android:textSize="13sp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:drawablePadding="4dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Список данных -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Автомобили в наличии"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginBottom="12dp"
                android:gravity="start" />

            <!-- RecyclerView с фиксированной высотой и отступами -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewData"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:padding="4dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tvEmptyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нет данных для отображения"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnAddCar"
                android:layout_width="38dp"
                android:layout_height="70dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_green"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:text="➕ Добавить авто"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnAddClient"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_blue"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:text="➕ Добавить клиента"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnAddDeal"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_blue"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:text="➕ Новая сделка"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Дополнительные действия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Кнопка выхода -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Выйти из системы"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="#000000"
            android:textColor="@color/white"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>